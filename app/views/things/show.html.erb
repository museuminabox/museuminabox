<p><a href="/objects">Objects</a></p>
<h1><%= @thing.name %></h1>

<div class="row">
	<div class="twelve columns">
		<p><a href="/lakshmi.jpg" style="text-decoration:none;"><img src="/lakshmi.jpg" alt="placeholder - should show large image of original object" style="width:100%;"></a></p>
	</div>
</div>

<div class="row">
	<div class="seven columns">
		<p class="lead">
			<%= @thing.description %>
		</p>
		<p><a href="<%= @thing.description_attribution_url %>">Source of description</a>
		<% if @thing.wikipedia_url %>
		 + <a href="<%= @thing.wikipedia_url %>">Wikipedia</a>
		 <% end %>
		 </p>
 		<p>The original is a <%= @thing.three_dimensions ? '3D' : '2D' %> object.</p>
	</div>
	<div class="three columns">

		<h5>From</h5>
	<% if @thing.institution %>
	  <p><%= link_to @thing.institution.name, @thing.institution %></p>
	<% else %>
	  <p>This object didn't come from an institution.</p>
	<% end %>
	
		<h5>Made by</h5>
		<p>
		  <% @thing.creators.each do |creator| %>
			<span><%= creator %></span>
		  <% end %>
		</p>
		
		<h5>Tags</h5>	
		<p class="tag">
		  <% @thing.tags.each do |tag| %>
			<span><%= tag %></span>
		  <% end %>
		</p>	
	
	</div>	
	<div class="two columns">
		<h5>Boxes</h5>
		<p>
			<a href="">Box 1</a>
			<a href="">Box 2</a>
		</p>	
	</div>
	
</div>

<h3>Prints</h3>
<table width="100%">
	<tr>
		<th>Print ID</th>
		<th>Box</th>
		<th>Created</th>
		<th>Sent To</th>
		<th>Last Boop</th>
	</tr>
	<tr>
		<td>3</td>
		<td><a href="/boxes/2">Animals</a></td>
		<td>3 weeks ago</td>
		<td>United Kingdom</td>
		<td>2 minutes ago</td>
	</tr>
	<tr>
		<td>4</td>
		<td><a href="">Big Cats</a></td>
		<td>9 days ago</td>
		<td>New Zealand</td>
		<td>2 days ago</td>
	</tr>
</table>